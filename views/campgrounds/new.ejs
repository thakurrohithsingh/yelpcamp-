<% include ../partials/header %>
<div class="container">
    <div class="row text-center">
        <h1>Create a New Campground</h1>
        <div style="align:center;text-align: center; width: 0 auto; padding-top: 35px;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                   
                    <input class="form-control" type="text" name="name"  placeholder="Yosemite" style="height:40px; width:100%;" required>
                </div>
                <div class="form-group">
                   
                    <input class="form-control" type="text" name="image"  placeholder="https://source.unsplash.com/TCCCKgdFmBo" style="height: 40px;width: 100%;" required>
                </div>
                <div class="form-group">
                    
                    <input style="height: 40px;width: 100%;" class="form-control" type="number" name="cost"  placeholder="9.99" step="0.01" min="0" required>
                </div>
                <div class="form-group">
                
                    <input style="height: 40px;width: 100%;" class="form-control" type="text" name="location" placeholder="Yosemite National Park, CA" required>
                </div>
                <div class="form-group">
                
                    <input style="width: 100%;height: 40px;" class="form-control" type="text" name="description"  placeholder="Californiaâ€™s Sierra Nevada mountains." required>
                </div>
                <div class="form-group">
                    <button class="btn btn-sm btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a class = "btn btn-primary btn-large" href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

    
<% include ../partials/footer %>

