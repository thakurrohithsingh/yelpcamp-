<% include ../partials/header %>

<div class = "container" >
  
        <div class = "row text-center" >
         <h1>ADD THE YELPCAMP IMAGES</h1>
       <div  style = "align: center; text-align: center; margin: 0 auto; padding-top:35px;" >
               <form  action = "/campgrounds" method = "POST" >
                  <div class = "form-group" >
                         <input type = "text" class = "form-control" style = "height:40px; width:100%;" name = "name" placeholder = "campgrounds names" required>
                   </div>
                   <div class = "form-group" >
                         <input type = "text" class = "form-control" style = "height:40px; width:100%;" name = "image" placeholder = "url of a images" required>
                   </div>
                   <div class = "form-group" >
                         <input type = "text" class = "form-control" style = "height:40px; width:100%;" name = "price" placeholder = " Campground price" required>
                   </div>
                   <div class = "form-group">
                           <textarea class = "form-control" rows = "5" cols = "30" name = "description" placeholder = "campgrounds description" required></textarea>
                    </div>
                    <div class = "form-group" >
                     <button class = "btn btn-primary btn-large btn-block" >submit</button>
                    </div>
               </form>
                  <a class = "btn btn-primary btn-large" href = "/campgrounds">Go Back</a>
       </div>   
        </div>
   
</div>





