<% include ../partials/header %>
<div class="container">
    


    <div class="row text-center">
        <h1>Edit "<%= campground.name %>" comment</h1>
        <div style="align:center;text-align: center; margin: 0 auto;padding-top: 35px;">
            <form action="/campgrounds/<%= campground._id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input style="height: 40px;width: 100%;" class="form-control" type="text" value="<%=comment.text %>" name="text" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a class="btn btn-primary btn-lg" href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

