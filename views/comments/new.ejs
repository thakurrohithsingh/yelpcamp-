<% include ../partials/header %>

<div class="container">
    

    <div class="row text-center">
        <h1>Add New Comment to "<%= campground.name %>"</h1>
        <div style="align:center;text-align: center; padding-top: 35px; margin: 0 auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input style="height: 40px;width: 100%;" class="form-control" type="text" name="text" placeholder="text" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

