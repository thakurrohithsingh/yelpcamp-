<% include ./partials/header %>
<div class= "container">

    <div class="row text-center">
        <h1>Login Form</h1>
        <div style="align:center;text-align: center; padding-top: 35px; margin: 0 auto;">
            <form action="/login" method="post">
                <div class="form-group">
                    <input class="form-control" style="height: 40px;width: 100%;" type="text" name="username" placeholder="username" required>
                </div>
                <div class="form-group">
                    <input class="form-control" style="height: 40px;width: 100%;" type="password" name="password" placeholder="password" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-sm btn-primary btn-block">Login</button>
                </div>
            </form>
             <a class="btn btn-primary btn-large" href="/campgrounds">Go Back</a>
            <a class="btn btn-success btn-large" href="/forgot">Forgot Password!!</a>
        </div>
    </div>
</div>
